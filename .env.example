# Django
DJANGO_SECRET_KEY=change-me-to-secret
DJANGO_DEBUG=True
DJANGO_ENV=dev
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Postgres)
POSTGRES_DB=finassist_dev
POSTGRES_USER=finassist
POSTGRES_PASSWORD=finassist_pass
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://finassist:finassist_pass@db:5432/finassist_dev

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Ports
WEB_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379

# MinIO (optional)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_access
MINIO_SECRET_KEY=minio_secret
MINIO_BUCKET=finassist-dev

# ML service
ML_SERVICE_URL=http://ml:8000

# Email (dev uses console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Collect static in entrypoint? 1/0
DJANGO_COLLECTSTATIC=1
