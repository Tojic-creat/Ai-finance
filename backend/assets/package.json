{
  "name": "finassist-assets",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend asset build scripts for FinAssist (Tailwind CSS)",
  "scripts": {
    "build:css": "tailwindcss -i ./backend/templates/static/css/tailwind.css -o ./backend/templates/static/css/tailwind.build.css --minify",
